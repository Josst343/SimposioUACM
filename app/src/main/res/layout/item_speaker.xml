<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:elevation="4dp"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemSpeakerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImagesViewHome"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Nombre expositor"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="@dimen/tamanioTitulo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemSpeakerJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Trabajo expositor"
            android:textColor="@color/design_default_color_primary"
            android:textSize="@dimen/tamanioSubtitulo" />

    </LinearLayout>

</androidx.cardview.widget.CardView>